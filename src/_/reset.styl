// Убираем точечную обводку у ссылок
*:focus
	outline: none

// Сбрасываем поля форм
input[type="text"],
input[type="email"],
input[type="tel"],
input[type="search"],
input[type="submit"],
input[type="number"], 
textarea, select
	-webkit-appearance none
	-moz-appearance none
	appearance none
	border-radius 0
select::-ms-expand
	display none
	
// Убираем голубой фон у селектов в ie10/ie11
select::-ms-value
	background none
	color #000

// Убираем кнопку "очистить" у инпута типа поиск
input[type="search"]::-webkit-search-decoration,
input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-results-button,
input[type="search"]::-webkit-search-results-decoration
	display none

// Убираем стрелочки +- у инпутов типа число
input[type=number]
	&::-webkit-inner-spin-button, &::-webkit-outer-spin-button
		margin 0
		-webkit-appearance none

// Убираем на iOS голубое подсвечивание при тапе на элементах
input, textarea, button,
select, label, a
	-webkit-tap-highlight-color rgba(0, 0, 0, 0)
	-webkit-tap-highlight-color transparent
	
// Не изменять размер шрифта в ландшафтном положениии экрана
html
	-webkit-text-size-adjust 100%

// Clearfix
.group:before, .group:after
	content ""
	display table
.group:after
	clear both
.group
	zoom 1